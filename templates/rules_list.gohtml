{{ define "rules_list" }}
  {{ if .Data }}
  <div class="line-border text-color">
    <div class="text-center"><p><strong>Active Rules</strong></p></div>
    <table class="table">
    {{ range .Data }}
    <tr>
        <td class="align-top text-center"><strong>{{ .RuleNumber }}</strong></td>
        <td class="text-left">
        {{ range .RuleText }}
          <p>{{ . }} </p>
        {{ end }}
        </td>
    </tr>
    {{ end }}
    </table>
  </div>
  {{ end }}

  <style>
    .text-color {
        background-color: #e0f4c0;
    }

    .line-border {
        border: 1px solid #b5e26f;
    }
  </style>
{{ end }}